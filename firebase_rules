{
  "rules": {
    "users": {
      ".read": false,
      ".write": false,
      "$uid": {
        ".read": "auth.uid === $uid",
        ".write": "auth.uid === $uid"
      }
    },
    "matches": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$matchId": {
        ".read": true,
        ".write": "auth != null && root.child($matchId).child('creatorId').val() === auth.uid",
        "users": {
          ".write": "root.child($matchId).child('creatorId').val() === auth.uid || (root.child($matchId).child('locked').val() === false && auth != null)"
        }
      }
    }
  }
}
