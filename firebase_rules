{
  "rules": {
    "users": {
      ".read": false,
      ".write": false,
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "matches": {
      ".indexOn": ["creatorId"],
      ".read": "auth != null",
      ".write": "auth != null",
      "$matchId": {
        ".read": true,
        ".write": "auth != null && root.child('matches').child($matchId).child('creatorId').val() === auth.uid",
        "users": {
          "$uid": {
            ".write": "auth != null && auth.uid === $uid && (root.child('matches').child($matchId).child('creatorId').val() === auth.uid || root.child('matches').child($matchId).child('locked').val() === false)"
          }
        }
      }
    }
  }
}
